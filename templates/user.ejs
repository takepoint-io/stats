                <thead>
                    <tr>
                        <th colspan="2" class="blue-border-2px text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Score</td>
                        <td>
                            <%= player.score.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Time Played</td>
                        <td>
                            <%= formatTime(player.timePlayed) %>
                        </td>
                    </tr>
                    <tr>
                        <td>Overall K/D Ratio</td>
                        <td>
                            <%= player.kdr.toLocaleString(undefined, {minimumFractionDigits: 2}) %>
                        </td>
                    </tr>
                    <tr>
                        <td>Score Per Minute</td>
                        <td>
                            <%= player.spm.toLocaleString(undefined, {minimumFractionDigits: 2}) %>
                        </td>
                    </tr>
                    <tr>
                        <td>Longest Killstreak</td>
                        <td>
                            <%= player.killstreak.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Total Kills</td>
                        <td>
                            <%= player.kills.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Total Deaths</td>
                        <td>
                            <%= player.deaths.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Accuracy</td>
                        <td>
                            <%= player.accuracy.toLocaleString(undefined, {minimumFractionDigits: 2}) + "%" %>
                        </td>
                    </tr>
                    <tr>
                        <td>Total Distance Covered</td>
                        <td>
                            <%= player.distanceCovered %>
                        </td>
                    </tr>
                    <tr>
                        <td>Double Kills</td>
                        <td>
                            <%= player.doubleKills.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Triple Kills</td>
                        <td>
                            <%= player.tripleKills.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Multi Kills</td>
                        <td>
                            <%= player.multiKills.toLocaleString() %>
                        </td>
                    </tr>
                    <tr>
                        <td>Started Playing</td>
                        <td>
                            <%= player.joinedAt %>
                        </td>
                    </tr>
                    <tr>
                        <td>Last Active</td>
                        <td>
                            <%= player.activeAt %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="table-responsive">
                <table class="table loadout-table">
                    <thead>
                        <tr class="blue-border-2px">
                            <th colspan="2">
                                <h2 class="text-center">Favorite Loadouts</h2>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <h3>
                                    <%= player.mostUsedWeapon[0].selected ? player.mostUsedWeapon[1] : "None" %>
                                </h3>
                                <p>Selected <%= player.mostUsedWeapon[0].selected.toLocaleString() %> times</p>
                            </td>
                            <td>
                                <% if (player.mostUsedWeapon[0].selected) { %>
                                    <img id="classImage" src="/img/<%= player.mostUsedWeapon[1] %>.jpg">
                            </td>
                            <% } %>
                        </tr>
                        <tr>
                            <td>
                                <h3>Upgrades Selected</h3>
                                <p>Speed Increase: <%= player.upgrades.speed.toLocaleString() %>
                                </p>
                                <p>Faster Reload: <%= player.upgrades.reload.toLocaleString() %>
                                </p>
                                <p>Larger Mags: <%= player.upgrades.mags.toLocaleString() %>
                                </p>
                                <p>Extend View: <%= player.upgrades.view.toLocaleString() %>
                                </p>
                                <p>Heal Faster: <%= player.upgrades.heal.toLocaleString() %>
                                </p>
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h3>
                                    <%= player.mostUsedPerk[1] ? player.mostUsedPerk[0] : "None" %>
                                </h3>
                                <p>Used <%= player.mostUsedPerk[1].toLocaleString() %> times</p>
                            </td>
                            <td>
                                <% if (player.mostUsedPerk[1]) { %>
                                    <img id="classImage" src="/img/<%= player.mostUsedPerk[0] %>.jpg">
                            </td>
                            <% } %>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
