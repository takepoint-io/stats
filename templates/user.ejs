<div class="container" id="pageContainer">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <h2 class="text-center">
                <% if (player.verified) { %>
                    <div id="verified-check" title="Verified"></div>
                <% } %>
                <%= player.username %> Player Summary
            </h2>
            <div id="profile-badges">
                <h4 class="text-center">Badges</h4>
                <% for (let badge of player.badges) { %>
                    <img class="takepoint-badge" src="/img/badges/<%= badge.name %>.png" info="<%= badge.info %>" timestamp="<%= badge.timestamp || '' %>">
                <% } %>
            </div>
            <h2 class="text-center key-stat">
                <%= player.pointsTaken.toLocaleString() %> Points Taken
            </h2>
            <h2 class="text-center key-stat">
                <%= player.pointsNeutralized.toLocaleString() %> Points Neutralized
            </h2>
